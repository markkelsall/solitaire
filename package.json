{
  "name": "simple-react-full-stack",
  "version": "1.0.7",
  "description": "Boilerplate to build a full stack web application using React, Node.js, Express and Webpack.",
  "main": "src/client/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "http-server",
    "dev-client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "dev-server": "nodemon --exec babel-node src/server/index.js",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "test": "jest --coverage",
    "pre-commit": "node ./pre-commit.js"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "release": {
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ]
    ],
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node pre-commit.js"
    }
  },
  "author": "Mark Kelsall",
  "license": "ISC",
  "dependencies": {
    "babel-plugin-react-css-modules": "^5.2.6",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "http-server": "^0.11.1",
    "prop-types": "^15.6.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-hot-loader": "4.12.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "babel-jest": "^24.9.0",
    "babel-loader": "8",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^3.0.0",
    "concurrently": "^3.5.1",
    "css-loader": "^1.0.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "jest-css-modules": "^2.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "4.12.0",
    "nodemon": "^1.19.2",
    "postcss-loader": "^3.0.0",
    "react-test-renderer": "^16.9.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.40.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.1.3"
  }
}
