{
  "name": "solitaire",
  "version": "1.14.3",
  "description": "Solitaire game",
  "main": "src/client/index.js",
  "scripts": {
    "build": "yarn build:js && yarn build:css",
    "dev": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "build:js": "webpack --mode production",
    "build:css": "postcss src/client/css/main.css -o dist/main.css",
    "test": "jest --coverage",
    "lint": "eslint src/",
    "check-bundle-size": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json"
  },
  "author": "Mark Kelsall",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.7.2",
    "express": "^4.16.3",
    "prop-types": "^15.6.2",
    "react": "16.9.0",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dom": "16.9.0",
    "react-hot-loader": "4.12.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@testing-library/react": "^9.4.1",
    "@types/jest": "^25.1.3",
    "babel-loader": "8",
    "copy-webpack-plugin": "^5.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "postcss": "^7.0.23",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "react-test-renderer": "^16.9.0",
    "tailwindcss": "^1.1.4",
    "webpack": "^4.40.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn build && git add ."
    }
  }
